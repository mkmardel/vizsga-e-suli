<div class="card-body">
    <div class="mb-4">
        <h4>Jelentkező módosítása</h4>
        <hr>
    </div>
    <p>
        Tanfolyam: {{applicant.course.title}}<br>
        Név: {{applicant.name}}<br>
        E-mail cím: {{applicant.email}}<br>
        Születési dátum: {{generateDate applicant.dateOfBirth 'YYYY. MM. DD.'}}<br>
    </p>
    <p>
        Státusz:<br>
        <form action="/admin/applicants/edit/{{applicant._id}}?_method=PUT" method="post">
            <input type="text" id="course" name="course" class="hidden" value="{{applicant.course._id}}">
            <div class="form-group">
                <select type="text" class="form-select" id="status" name="status">
                    {{#select applicant.status}}    
                        <option value="in_progress">Folyamatban</option>
                        <option value="approved">Jóváhagyva</option>
                        <option value="denied">Elutasítva</option>
                    {{/select}}
                </select>
                {{#ifEq applicant.status "approved"}}
                        <br>
                        A jóváhagyott státusz nem módosítható.
                    {{else}}
                        <button type="submit" class="btn btn-warning mt-3">Módosít</button>
                {{/ifEq}}
            </div>
        </form>
    </p>
</div>