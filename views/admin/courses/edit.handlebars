<div class="card-body">
    <div class="mb-4">
        <h4>Tanfolyam módosítása</h4>
        <hr>
    </div>
    <form action="/admin/courses/{{course._id}}?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="form-group mb-2">
            <label for="title">Megnevezés</label>
            <input required type="text" id="title" name="title" class="form-control" value={{course.title}}>
        </div>
        <div class="form-group mb-2">
            <label for="name">Részletek</label>
            <textarea required type="text" id="body" name="body" class="form-control">{{course.body}}</textarea>
        </div>
        <div class="form-group mb-2">
            <label for="startDate">Indulás dátuma</label>
            <input required type="date" id="startDate" name="startDate" class="form-control" value="{{generateDate course.startDate 'YYYY-MM-DD'}}">
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" id="forcedVisibility" name="forcedVisibility" {{checked course.forcedVisibility}} value="1" name="forcedVisibility">
            <label class="form-check-label" for="forcedVisibility">
                Indulás után is listázódjon
            </label>
        </div>
        <div class="form-group mb-2">
            <label for="category">Kategória</label>
            <input type="text" class="hidden" id="category" name="category" value="{{course.category._id}}">
            <input type="text" class="form-control noselect" id="" name="" value="{{course.category.name}}">
        </div>


        <div class="form-group mb-2">
            <label for="title">Borítókép</label>
            <input type="file" id="file" name="file" class="form-control">
        </div>
        <button class="btn btn-warning mt-3">Módosít</button>
    </form>
</div>