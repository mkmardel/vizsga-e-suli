<div class="card-body">
    <div class="mb-4">
        <h4>Kategória módosítása</h4>
        <hr>
    </div>
        <form action="/admin/categories/{{category._id}}?_method=PUT" method="post">
            <div class="form-group mb-2">
                <label for="name">Megnevezés</label>
                <input required type="text" id="name" name="name" class="form-control" value="{{category.name}}">
            </div>
            <div class="form-group">
                <label for="body">Leírás</label>
                <textarea required id="body" name="body" class="form-control">{{category.body}}</textarea>
            </div>
            <button class="btn btn-warning mt-3">Módosít</button>
        </form>
</div>